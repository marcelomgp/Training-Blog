<h1>Atualizar Item</h1>

<%= form_for :article, url: article_path(@blog_item), method: :patch do |f| %>
  
  <% if @blog_item.errors.any? %>
  <div id = "error explanation">
    <h2><%= pluralize(@blog_item.errors.count, "error") %> prohibited the form from being saved:</h2>
    <ul>
      <% @blog_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<p>
<%= link_to 'Voltar', articles_path %>
</p>